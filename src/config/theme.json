      "text": {
        "primary": "#292522",
        "secondary": "#666666",
        "disabled": "#999999",
        "inverse": "#FFFFFF"
      }
    },
    "dark": {
      "background": {
        "default": "#1A1A1A",
        "paper": "#2D2D2D",
        "secondary": "#404040"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#E5E5E5",
        "disabled": "#A3A3A3",
        "inverse": "#292522"
      }
    }
