    "button": {
      "variants": ["primary", "secondary", "outline", "ghost", "destructive"],
      "sizes": ["sm", "md", "lg", "xl"]
    },
    "card": {
      "variants": ["default", "elevated", "outlined", "glass", "gradient"],
      "padding": ["none", "sm", "md", "lg", "xl"]
    },
    "typography": {
      "variants": ["h1", "h2", "h3", "h4", "h5", "h6", "body", "caption", "overline"]
    }
