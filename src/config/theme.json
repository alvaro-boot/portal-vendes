  "typography": {
    "fontFamily": {
      "primary": "Inter, system-ui, sans-serif",
      "secondary": "Playfair Display, serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
